@model WebApplication1.Models.UserReg

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/UserLoginStyle.css">
    <title>Signin & Sign up</title>
</head>
<body>

    <div class="wrapper">

        <div class="form-container sign-up">
            <form asp-action="UserRegister" method="post">
                <h2>Sign Up</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Name" type="text" class="form-control" />
                    <i class="fas fa-user"></i>
                    <label asp-for="Name">Username</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Email" type="email" class="form-control" />
                    <i class="fas fa-at"></i>
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" />
                    <i class="fas fa-lock"></i>
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="CPassword" type="password" class="form-control" />
                    <i class="fas fa-lock"></i>
                    <label asp-for="CPassword">Confirm Password</label>
                    <span asp-validation-for="CPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn">Sign Up</button>
                <div class="link">
                    <p>You already have an account? <a href="#" class="signin-link">Sign In</a></p>
                </div>
            </form>
        </div>

       <div class="form-container sign-in" >
     
                <form asp-action="UserLogin" method="post">
                    <h2>Login</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <input asp-for="Email" type="email" class="form-control" />
                        <i class="fas fa-at"></i>
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" />
                        <i class="fas fa-lock"></i>
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                <button type="submit" class="btn">Login</button>
                <div class="link">
                    <p>Don't have an account? <a href="#" class="signup-link">Sign Up</a></p>
                </div>
            </form>
        </div> 

    </div>

    <script src="https://kit.fontawesome.com/9e5ba2e3f5.js" crossorigin="anonymous"></script>
    <script src="~/js/main.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
