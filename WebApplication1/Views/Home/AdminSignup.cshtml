@model WebApplication1.Models.register



@{
    Layout = "_SignupLayout";
}


<div class="container">
    <div class="screen">
        <div class="screen__content">

            <form asp-action="AdminSignup" method="post" class="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="login__field">
                    <i class="login__icon fas fa-user"></i>
                    <input asp-for="Name" class="login__input" placeholder="User Name" />
                    <br />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

                <div class="login__field">
                    <i class="login__icon fas fa-user"></i>
                    <input asp-for="Email" class="login__input" placeholder="Email" />
                    <br />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="login__field">
                    <i class="login__icon fas fa-lock"></i>
                    <input asp-for="Password" class="login__input" placeholder="Password" />
                    <br />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="login__field">
                    <i class="login__icon fas fa-lock"></i>
                    <input asp-for="CPassword" class="login__input" placeholder="Confirm Password" />
                    <br />
                    <span asp-validation-for="CPassword" class="text-danger"></span>
                </div>

                
